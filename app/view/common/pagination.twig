<nav aria-label="Page navigation example">
  <ul class="pagination">
    {% if prev %}
    <li class="page-item"><a class="page-link" href="{{ prev }}" aria-label="Previous"><span aria-hidden="true">«</span></a></li>
    {% endif %}
    {% for page in pages %}
    <li class="page-item">
        {% if page.current %}
        <span class="page-link">{{ page.page }}</span>
        {% else %}
        <a class="page-link" href="{{ page.url }}">{{ page.page }}</a>
        {% endif %}
    </li>
    {% endfor %}
    {% if next %}
    <li class="page-item"><a class="page-link" href="{{ next }}" aria-label="Next"><span aria-hidden="true">»</span></a></li>
    {% endif %}
  </ul>
</nav>